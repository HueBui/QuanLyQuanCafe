<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/decorators">
    <!-- Any urls that are excluded will never be decorated by Sitemesh -->
    <excludes>
        <pattern>/api*</pattern>
    </excludes>

    <!-- apply Sitemesh default template -->
    <decorator name="admin" page="admin.jsp">
        <pattern>/admin*</pattern>
    </decorator>
    <decorator name="login" page="login.jsp">
        <pattern>/login</pattern>
    </decorator>
    <decorator name="management" page="management.jsp">
        <pattern>/management</pattern>
    </decorator>
    <decorator name="total" page="management.jsp">
        <pattern>/totalByDate</pattern>
    </decorator>
    <decorator name="management-product" page="management.jsp">
        <pattern>/management-product</pattern>
    </decorator>

    <decorator name="web" page="web.jsp">
        <pattern>/*</pattern>
    </decorator>
</decorators>